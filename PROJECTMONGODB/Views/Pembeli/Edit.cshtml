@model ProjectMongoDB.Models.Pembeli

@{
    ViewData["Title"] = "Edit Data Pembeli";
}

<style>
    .edit-container {
        max-width: 700px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .card-custom {
        background: #ffffff;
        border-radius: 12px;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid #e3e6f0;
        overflow: hidden;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: white;
        padding: 25px 30px;
        border-bottom: none;
    }

    .card-header-custom h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .card-body-custom {
        padding: 35px 30px;
    }

    .form-group-custom {
        margin-bottom: 25px;
    }

    .form-label-custom {
        display: block;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 8px;
        font-size: 14px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-input-custom {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s ease;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
    }

    .form-input-custom:focus {
        outline: none;
        border-color: #8B4513;
        box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.1);
    }

    .form-textarea-custom {
        width: 100%;
        padding: 12px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 8px;
        font-size: 15px;
        transition: all 0.3s ease;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        resize: vertical;
        min-height: 100px;
    }

    .form-textarea-custom:focus {
        outline: none;
        border-color: #8B4513;
        box-shadow: 0 0 0 3px rgba(139, 69, 19, 0.1);
    }

    .button-group {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 2px solid #f7fafc;
    }

    .btn-custom {
        padding: 14px 32px;
        border: none;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .btn-primary-custom {
        background: linear-gradient(135deg, #8B4513 0%, #A0522D 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(139, 69, 19, 0.4);
    }

    .btn-primary-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(139, 69, 19, 0.5);
    }

    .btn-secondary-custom {
        background: #f7fafc;
        color: #4a5568;
        border: 2px solid #e2e8f0;
    }

    .btn-secondary-custom:hover {
        background: #edf2f7;
        border-color: #cbd5e0;
        transform: translateY(-1px);
    }
</style>

<div class="edit-container">
    <div class="card-custom">
        <div class="card-header-custom">
            <h2>üìù Edit Data Pembeli</h2>
        </div>
        <div class="card-body-custom">
            <form action="/Pembeli/Edit/@Model.Id" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group-custom">
                    <label class="form-label-custom">Nama Lengkap</label>
                    <input type="text" name="Nama" value="@Model.Nama" class="form-input-custom"
                        placeholder="Masukkan nama lengkap" required />
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom">Email</label>
                    <input type="email" name="Email" value="@Model.Email" class="form-input-custom"
                        placeholder="contoh@email.com" required />
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom">Alamat</label>
                    <textarea name="Alamat" class="form-textarea-custom" placeholder="Masukkan alamat lengkap"
                        required>@Model.Alamat</textarea>
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom">Kategori</label>
                    <input type="text" name="Jurusan" value="@Model.Jurusan" class="form-input-custom"
                        placeholder="Masukkan kategori pembeli" required />
                </div>

                <div class="button-group">
                    <a href="/Pembeli" class="btn-custom btn-secondary-custom">‚Üê Kembali</a>
                    <button type="submit" class="btn-custom btn-primary-custom">‚úì Simpan Perubahan</button>
                </div>
            </form>
        </div>
    </div>
</div>