@model ProjectMongoDB.Models.Produk

@{
    ViewData["Title"] = "Edit Produk";
}

<style>
    .edit-container { max-width: 700px; margin: 50px auto; padding: 0 20px; }
    .card-custom { background: #fff; border-radius: 12px; box-shadow: 0 2px 20px rgba(0,0,0,.08); border: 1px solid #e3e6f0; overflow: hidden; }
    .card-header-custom { background: linear-gradient(135deg,#8B4513 0%,#A0522D 100%); color: #fff; padding: 25px 30px; }
    .card-header-custom h2 { margin: 0; font-size: 24px; font-weight: 600; }
    .card-body-custom { padding: 35px 30px; }
    .form-group-custom { margin-bottom: 20px; }
    .form-label-custom { display:block; font-weight:600; color:#2d3748; margin-bottom:8px; font-size:14px; text-transform:uppercase; letter-spacing:.5px; }
    .form-input-custom { width:100%; padding:12px 16px; border:2px solid #e2e8f0; border-radius:8px; font-size:15px; transition:all .3s ease; box-sizing:border-box; }
    .form-input-custom:focus { outline:none; border-color:#8B4513; box-shadow:0 0 0 3px rgba(139,69,19,.1); }
    .button-group { display:flex; gap:12px; justify-content:flex-end; margin-top:30px; padding-top:20px; border-top:2px solid #f7fafc; }
    .btn-custom { padding:12px 28px; border:none; border-radius:8px; font-size:15px; font-weight:600; cursor:pointer; transition:all .2s ease; text-decoration:none; display:inline-block; }
    .btn-primary-custom { background: linear-gradient(135deg,#8B4513 0%,#A0522D 100%); color:#fff; }
    .btn-primary-custom:hover { transform: translateY(-2px); }
    .btn-secondary-custom { background:#f7fafc; color:#4a5568; border:2px solid #e2e8f0; }
    .btn-secondary-custom:hover { background:#edf2f7; }
</style>

<div class="edit-container">
    <div class="card-custom">
        <div class="card-header-custom">
            <h2>✏️ Edit Produk</h2>
        </div>
        <div class="card-body-custom">
            <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="form-group-custom">
                    <label class="form-label-custom">Nama Produk</label>
                    <input class="form-input-custom" name="NamaProduk" value="@Model.NamaProduk" required />
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom">Harga (Rp)</label>
                    <input class="form-input-custom" name="Harga" type="number" min="0" step="1" value="@Model.Harga" required />
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom">Kategori</label>
                    <input class="form-input-custom" name="Kategori" value="@Model.Kategori" required />
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom">Stok</label>
                    <input class="form-input-custom" name="Stok" type="number" min="0" step="1" value="@Model.Stok" required />
                </div>

                <div class="button-group">
                    <a asp-action="Index" class="btn-custom btn-secondary-custom">← Kembali</a>
                    <button type="submit" class="btn-custom btn-primary-custom">✓ Simpan Perubahan</button>
                </div>
            </form>
        </div>
    </div>
</div>


