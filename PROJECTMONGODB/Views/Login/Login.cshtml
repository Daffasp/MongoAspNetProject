@{
    Layout = null;
}

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <title>Login - Bakery Management System</title>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', Arial, sans-serif;
            background-color: #3d2416;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            display: flex;
            align-items: center;
            gap: 100px;
            max-width: 1100px;
            width: 100%;
        }

        .left-section {
            flex: 1;
            text-align: center;
        }

        .logo-circle {
            width: 120px;
            height: 120px;
            background-color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 64px;
            margin: 0 auto 30px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
        }

        .brand-title {
            color: white;
            margin-bottom: 8px;
        }

        .brand-title h1 {
            font-family: 'Playfair Display', serif;
            font-size: 46px;
            font-weight: 700;
            text-transform: uppercase;
            line-height: 1.3;
            letter-spacing: 2px;
            margin-bottom: 5px;
        }

        .brand-title p {
            font-size: 16px;
            font-weight: 300;
            opacity: 0.9;
            letter-spacing: 0.5px;
        }

        .login-box {
            background-color: white;
            padding: 45px 40px;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0,0,0,0.4);
            width: 420px;
        }

        .login-box h2 {
            text-align: center;
            margin-bottom: 35px;
            color: #2c2c2c;
            font-size: 32px;
            font-weight: 600;
            letter-spacing: 0.5px;
        }

        .form-group {
            margin-bottom: 24px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #555;
            font-size: 14px;
            font-weight: 500;
        }

        input {
            width: 100%;
            padding: 14px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 15px;
            font-family: 'Poppins', Arial, sans-serif;
            transition: all 0.3s ease;
            background-color: #fafafa;
        }

        input:focus {
            outline: none;
            border-color: #3d2416;
            background-color: white;
            box-shadow: 0 2px 8px rgba(61, 36, 22, 0.1);
        }

        input::placeholder {
            color: #999;
        }

        button {
            width: 100%;
            background-color: #3d2416;
            color: white;
            border: none;
            padding: 14px 16px;
            cursor: pointer;
            font-size: 16px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-family: 'Poppins', Arial, sans-serif;
            margin-top: 10px;
            box-shadow: 0 4px 12px rgba(61, 36, 22, 0.3);
        }

        button:hover {
            background-color: #2a1910;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(61, 36, 22, 0.4);
        }

        button:active {
            transform: translateY(0);
        }

        .error-message {
            color: #d32f2f;
            text-align: center;
            margin-top: 20px;
            font-size: 14px;
            background-color: #ffebee;
            padding: 12px;
            border-radius: 6px;
            border-left: 4px solid #d32f2f;
        }

        @@media (max-width: 768px) {
            .login-container {
                flex-direction: column;
                gap: 50px;
            }

            .logo-circle {
                width: 100px;
                height: 100px;
                font-size: 52px;
                margin-bottom: 25px;
            }

            .brand-title h1 {
                font-size: 32px;
            }

            .brand-title p {
                font-size: 14px;
            }

            .login-box {
                width: 100%;
                max-width: 420px;
                padding: 40px 35px;
            }

            .login-box h2 {
                font-size: 28px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="left-section">
            <div class="logo-circle">üç∞</div>
            <div class="brand-title">
                <h1>BAKERY<br>MANAGEMENT<br>SYSTEM</h1>
                <p>Kota Bekasi</p>
            </div>
        </div>

        <div class="login-box">
            <h2>Login</h2>

            <form method="post" action="/login">
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" name="Username" placeholder="Masukkan username" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="Password" placeholder="Masukkan password" required />
                </div>
                <button type="submit">Login</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="error-message">@ViewBag.Error</div>
            }
        </div>
    </div>
</body>
</html>